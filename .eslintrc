{
    "rules": {
        // possible errors:
        "comma-dangle": [2, "always-multiline"],
        "no-cond-assign": [2, "except-parens"],
        "no-constant-condition": 2
        "no-console": 1,
        "no-control-regex": 1,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-class": 1,
        "no-empty": 1,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 1,
        "no-extra-semi": 1,
        "no-func-assign": 1,
        "no-inner-declarations": 1,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 1,
        "no-reserved-keys": 1,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 1,
        "valid-typeof": 2,

        // best practices:
        "block-scoped-var": 2,
        "complexity": [1, 2],
        "consistent-return": 1,
        "curly": 2,
        "default-case": 1,
        "dot-notation": [1, {"allowKeywords": true, "allowPattern": "^[a-z]+(_[a-z]+)+$"}],
        "dot-location": [1, "property"],
        "eqeqeq": [2, "smart"],
        "guard-for-in": 1,
        "no-alert": 1,
        "no-caller": 2,
        "no-div-regex": 1,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 1,
        "no-extend-native": 1,
        "no-extra-bind": 1,
        "no-fallthrough": 1,
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-labels": 2,
        "no-lone-blocks": 1,
        "no-loop-func": 2,
        "no-multi-spaces": 1,
        "no-multi-str": 1,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-octal-escape": 2,
        "no-octal": 2,
        "no-param-reassign": 1,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 1,
        "no-unused-expressions": 2,
        "no-void": 2,
        "no-warning-comments": [1, { "terms": ["todo", "fixme", "2do"], "location": "anywhere" }],
        "no-with": 1,
        "radix": 1,
        "vars-on-top": 2,
        "wrap-iife": [2, "outside"],
        "yoda": [1, "never"],

        // strict mode
        "strict": [2, "global"],

        // variables
        "no-catch-shadow": 1,
        "no-delete-var": 1,
        "no-label-var":
    },
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
        "chai": true,
        "assert": true
    }
}
