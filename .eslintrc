{
  "rules": {
    // possible errors:
    "comma-dangle": [2, "never"],
    "no-cond-assign": [2, "except-parens"],
    "no-constant-condition": 2,
    "no-console": 1,
    "no-control-regex": 1,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-class": 1,
    "no-empty": 1,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 1,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": 1,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 1,
    "no-reserved-keys": 1,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 1,
    "valid-typeof": 2,

    // best practices:
    "block-scoped-var": 2,
    "complexity": [1, 2],
    "consistent-return": 1,
    "curly": 2,
    "default-case": 1,
    "dot-notation": [1, {"allowKeywords": true, "allowPattern": "^[a-z]+(_[a-z]+)+$"}],
    "dot-location": [1, "property"],
    "eqeqeq": [2, "smart"],
    "guard-for-in": 1,
    "no-alert": 1,
    "no-caller": 2,
    "no-div-regex": 1,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-eval": 1,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-fallthrough": 1,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 1,
    "no-loop-func": 2,
    "no-multi-spaces": 1,
    "no-multi-str": 1,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-param-reassign": 1,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 1,
    "no-unused-expressions": 2,
    "no-void": 2,
    "no-warning-comments": [1, { "terms": ["todo", "fixme", "2do"], "location": "anywhere" }],
    "no-with": 1,
    "radix": 1,
    "vars-on-top": 2,
    "wrap-iife": [2, "outside"],
    "yoda": [1, "never"],

    // strict mode
    "strict": [2, "global"],

    // variables
    "no-catch-shadow": 1,
    "no-delete-var": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 1,
    "no-undef-init": 1,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 2,

    // node
    "handle-callback-err": 1,
    "no-mixed-requires": 1,
    "no-new-require": 2,
    "no-path-concat": 1,
    "no-process-exit": 2,

    // style
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": [2, { "properties": "always" }],
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-style": [2, "last"],
    "consistent-this": [1, "self"],
    "eol-last": 2,
    "indent": [1, 4],
    "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
    "linebreak-style": [2, "unix"],
    "max-nested-callbacks": [2, 3],
    "new-cap": 2,
    "new-parens": 2,
    "newline-after-var": [1, "always"],
    "no-array-constructor": 2,
    "no-continue": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [2, {"max": 2}],
    "no-nested-ternary": 1,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 2,
    "no-wrap-func": 2,
    "one-var": [2, "never"],
    "operator-assignment": [2, "always"],
    "operator-linebreak": [2, "after"],
    "padded-blocks": [2, "never"],
    "quote-props": [2, "as-needed"],
    "quotes": [1, "single", "avoid-escape"],
    "semi-spacing": [2, { "before": false, "after": true }],
    "semi": 2,
    "sort-vars": [1, "ignoreCase"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-brackets": [2, "never", {
      "singleValue": false,
      "objectsInArrays": false,
      "arraysInArrays": false,
      "arraysInObjects": false,
      "objectsInObjects": false,
      "propertyName": false
    }],
    "space-in-parens": [2, "never"],
    "space-infix-ops": [2, {"int32Hint": false}],
    "space-return-throw-case": 2,
    "space-unary-ops": [2, { "words": true, "nonwords": false }],
    "spaced-line-comment": [2, "always", { "exceptions": ["-"] }],
    "wrap-regex": 2,

    // ES6
    "generator-star-spacing": [2, "before"],
    "no-var": 1,
    "object-shorthand": [2, "methods"],

    // legacy
    "max-len": [1, 120, 2],
    "max-params": [1, 4],
    "no-bitwise": 1
  },
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "chai": true,
    "assert": true
  }
}
